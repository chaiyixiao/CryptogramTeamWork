<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.sdpcryptogram" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:windowSoftInputMode="stateVisible|adjustPan"

        android:theme="@style/AppTheme" >
        <activity android:name=".LoginActivity"
            android:label="SDP Cryptogram">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminMenuActivity"
            android:label="Administration"/>
        <activity
            android:name=".PlayerMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Play Game"/>
        <activity android:name=".AdminAddPlayerActivity"
            android:label="Add New Players"/>
        <activity android:name=".AdminAddCryptogramActivity"
            android:label="Add New Cryptograms"/>
        <activity android:name=".PlayCryptogramActivity"
            android:label="Cryptogram"/>
    </application>

</manifest>
